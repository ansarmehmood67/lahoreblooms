---
interface Props {
  phoneNumber?: string;
  whatsappUrl?: string;
}

const defaultPhoneNumber = '+923227555459';
const whatsappNumber = '923227555459';
const whatsappMessage = encodeURIComponent("Hi! I'm interested in wedding room decoration in Lahore. Can you help me?");
const defaultWhatsappUrl = `https://wa.me/${whatsappNumber}?text=${whatsappMessage}`;

const { phoneNumber = defaultPhoneNumber, whatsappUrl = defaultWhatsappUrl } = Astro.props as Props;
const services = [
  { href: '/masehri-design/', label: 'Masehri Design' },
  { href: '/masehri-design-simple/', label: 'Masehri Design (Simple)' },
  { href: '/masehri-design-artificial/', label: 'Masehri Design (Artificial)' },
  { href: '/masehri-design-latest/', label: 'Masehri Design (Latest)' },
  { href: '/saj-design/', label: 'Saj Design' },
  { href: '/simple-wedding-room-decoration-pakistani/', label: 'Simple Wedding Room Decoration (Pakistani)' },
  { href: '/luxury-wedding-room-decoration/', label: 'Luxury Wedding Room Decoration' },
  { href: '/bridal-room-decoration/', label: 'Bridal Room Decoration' },
];
---
<a href="#main-content" class="skip-to-content">Skip to main content</a>

<header class="hidden md:flex sticky top-0 z-50 bg-white/95 backdrop-blur-sm shadow-sm border-b border-gray-100">
  <div class="container mx-auto px-4 py-4 flex items-center justify-between">
    <div class="flex items-center gap-2">
      <h1 class="text-2xl font-bold bg-gradient-to-r from-pink-600 to-rose-600 bg-clip-text text-transparent">
        Lahore Blooms
      </h1>
      <span class="text-xs text-gray-500 font-medium">Wedding Room Decoration in Lahore</span>
    </div>
    <nav class="hidden lg:flex items-center gap-6">
      <a href="/" class="text-gray-700 hover:text-pink-600 transition-colors font-medium text-sm">Home</a>
      <div class="relative group">
        <button class="text-gray-700 hover:text-pink-600 transition-colors font-medium text-sm flex items-center gap-1">
          Services
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
        </button>
        <div class="absolute left-0 mt-3 w-72 bg-white shadow-xl border border-gray-100 rounded-xl py-3 hidden group-hover:block group-focus-within:block">
          <div class="grid grid-cols-1 divide-y divide-gray-100">
            {services.map((service) => (
              <a href={service.href} class="px-4 py-2 text-sm text-gray-700 hover:bg-pink-50 hover:text-pink-700 transition-colors flex items-center justify-between">
                <span>{service.label}</span>
                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
              </a>
            ))}
          </div>
        </div>
      </div>
      <a href="/wedding-room-decoration-prices/" class="text-gray-700 hover:text-pink-600 transition-colors font-medium text-sm">Prices</a>
      <a href="/gallery/" class="text-gray-700 hover:text-pink-600 transition-colors font-medium text-sm">Gallery</a>
      <a href="/contact/" class="text-gray-700 hover:text-pink-600 transition-colors font-medium text-sm">Contact</a>
      <a href={`tel:${phoneNumber}`} class="text-gray-700 hover:text-pink-600 transition-colors font-medium text-sm">{phoneNumber}</a>
      <a href={whatsappUrl} target="_blank" rel="noopener noreferrer" data-conversion="whatsapp" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-full font-semibold text-sm transition-colors flex items-center gap-2">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/></svg>
        WhatsApp
      </a>
    </nav>
  </div>
</header>

<header class="md:hidden sticky top-0 z-50 bg-white shadow-sm border-b border-gray-100">
  <div class="px-4 py-3 flex items-center justify-between">
    <div class="flex items-center gap-2">
      <h1 class="text-xl font-bold bg-gradient-to-r from-pink-600 to-rose-600 bg-clip-text text-transparent">
        Lahore Blooms
      </h1>
    </div>
    <a href={whatsappUrl} target="_blank" rel="noopener noreferrer" aria-label="Contact us on WhatsApp" data-conversion="whatsapp" class="bg-green-500 hover:bg-green-600 text-white p-2 rounded-full transition-colors">
      <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/></svg>
    </a>
  </div>
  <div class="border-t border-gray-100 bg-white">
    <nav class="px-4 py-3 space-y-3">
      <div class="flex flex-wrap gap-3 text-sm">
        <a href="/" class="text-gray-700 hover:text-pink-600 font-medium">Home</a>
        <a href="/wedding-room-decoration-prices/" class="text-gray-700 hover:text-pink-600 font-medium">Prices</a>
        <a href="/gallery/" class="text-gray-700 hover:text-pink-600 font-medium">Gallery</a>
        <a href="/contact/" class="text-gray-700 hover:text-pink-600 font-medium">Contact</a>
      </div>
      <details class="group border border-gray-200 rounded-lg">
        <summary class="flex items-center justify-between px-4 py-3 cursor-pointer text-gray-800 font-semibold">Services
          <svg class="w-4 h-4 text-gray-500 group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
        </summary>
        <div class="border-t border-gray-200 divide-y divide-gray-100">
          {services.map((service) => (
            <a href={service.href} class="block px-4 py-3 text-sm text-gray-700 hover:bg-pink-50 hover:text-pink-700 transition-colors">{service.label}</a>
          ))}
        </div>
      </details>
    </nav>
  </div>
</header>

<style>
  .skip-to-content {
    position: absolute;
    top: -40px;
    left: 0;
    background: #be185d;
    color: white;
    padding: 8px 16px;
    text-decoration: none;
    z-index: 100;
    border-radius: 0 0 4px 0;
    font-weight: 600;
  }
  .skip-to-content:focus {
    top: 0;
    outline: 3px solid #fff;
    outline-offset: 2px;
  }
</style>
