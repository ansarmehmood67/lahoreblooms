const whatsappNumber = '923227555459';
const whatsappMessage = encodeURIComponent("Hi! I'm interested in wedding room decoration options in Lahore.");
const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${whatsappMessage}`;
