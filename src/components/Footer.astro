---
interface Props {
  phoneNumber?: string;
  whatsappUrl?: string;
}

const defaultPhoneNumber = '+923227555459';
const whatsappNumber = '923227555459';
const whatsappMessage = encodeURIComponent("Hi! I'm interested in wedding room decoration in Lahore. Can you help me?");
const defaultWhatsappUrl = `https://wa.me/${whatsappNumber}?text=${whatsappMessage}`;

const { phoneNumber = defaultPhoneNumber, whatsappUrl = defaultWhatsappUrl } = Astro.props as Props;
