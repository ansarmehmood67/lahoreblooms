---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
  description: string;
  canonical?: string;
}

const { title, description, canonical } = Astro.props as Props;
const siteUrl = 'https://weddingroomdecoration.com';
const phoneNumber = '+923227555459';
const whatsappNumber = '923227555459';
const whatsappMessage = encodeURIComponent("Hi! I'm interested in wedding room decoration in Lahore. Can you help me?");
const whatsappUrl = `https://wa.me/${whatsappNumber}?text=${whatsappMessage}`;
const canonicalUrl = canonical ?? undefined;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    {canonicalUrl && <link rel="canonical" href={canonicalUrl} />}
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl ?? siteUrl} />
  </head>
  <body class="bg-white text-gray-900 antialiased">
    <style>
      body {
        font-family: 'Inter', system-ui, sans-serif;
      }
    </style>
    <Header phoneNumber={phoneNumber} whatsappUrl={whatsappUrl} />
    <main id="main-content" class="mx-auto max-w-5xl px-4 py-10">
      <slot />
    </main>
    <Footer phoneNumber={phoneNumber} whatsappUrl={whatsappUrl} />
  </body>
</html>
